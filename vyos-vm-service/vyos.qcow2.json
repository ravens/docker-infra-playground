{
    "_comment" : "Build with `packer build -var-file=vyos-var.json vyos.qcow2.json`",
  "builders": [{
    "type": "qemu",
    "accelerator": "kvm",
    "format" : "qcow2",
    "net_device" : "virtio-net",
    "iso_url": "{{user `iso_url`}}",
    "iso_checksum": "{{user `iso_checksum`}}",
    "iso_checksum_type": "{{user `iso_checksum_type`}}",
    "output_directory": "build",
    "vm_name": "vyos.img",
    "disk_size": "{{user `disk_size`}}",
    "headless": "{{user `headless`}}",
    "boot_wait": "5s",
      "boot_command": [
          "<enter><wait10><wait10>",
        "vyos<enter><wait>",
        "vyos<enter><wait>",
        "install image<enter><wait>",
        "<enter><wait>",
        "<enter><wait>",
        "<enter><wait>",
        "Yes<enter><wait>",
        "<enter><wait10>",
        "<enter><wait>",
        "<enter><wait>",
        "{{user `password`}}<enter><wait>",
        "{{user `password`}}<enter><wait>",
        "<enter><wait10><wait10>",
        "sudo sed -i 's/reboot -d -f -i/eject -m cdrom\\n\\treboot -d -f -i/' /etc/init.d/reboot<enter><wait>",
        "reboot<enter><wait>",
        "Yes<enter><wait10>",
        "<wait10>",
        "<wait10>",
        "<wait10>",
        "<wait10>",
        "vyos<enter><wait>",
        "{{user `password`}}<enter><wait>",
        "configure<enter><wait>",
        "delete system console<enter><wait>",
        "set interface ethernet eth0 address dhcp<enter><wait>",
        "set system login user {{user `user`}} authentication plaintext-password {{user `password`}}<enter><wait>",
        "set system login user {{user `user`}} level admin<enter><wait>",
        "set system login user {{user `user`}} authentication public-keys identifier key '{{user `sshpubkey`}}'<enter><wait>",
        "set system login user {{user `user`}} authentication public-keys identifier type ssh-rsa<enter><wait>",
        "set system name-server 8.8.8.8<enter><wait>",
        "set service ssh<enter><wait>",
        "set service salt-minion master 192.168.25.7<enter><wait>",
        "commit<enter><wait10>",
        "save<enter><wait>",
        "exit<enter><wait>",
        "reboot<enter><wait>",
        "Yes<enter><wait10>",
        "<wait10>",
        "<wait10>",
        "<wait10>",
        "<wait10>"
      ],
    "ssh_timeout": "{{user `ssh_timeout`}}",
    "ssh_username": "{{user `user`}}",
    "ssh_password": "{{user `password`}}",
    "shutdown_command": "sudo poweroff",
    "qemuargs": [
      ["-m", "{{user `memory`}}"],
      ["-smp", "{{user `cpus`}}"]
    ]
  }],
  "provisioners": [
    {
      "type":  "shell",
      "inline": [
        "sudo sed -i '/hw-id/d' /config/config.boot",
        "echo 'sudo_user: root\nuser: minion' | sudo    tee /etc/salt/minion.d/sudouser.conf"
        ]
    }]
}
