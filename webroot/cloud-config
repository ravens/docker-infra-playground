#!/bin/sh

# Generate cloud config

cat > "cloud-config.yml" <<EOF
#cloud-config
ssh_authorized_keys:
  - ssh-rsa  yan@saratoga.local
rancher:
  state:
    dev: LABEL=RANCHER_STATE
    fstype: auto
    autoformat:
      - /dev/sda
  services_include:
    ubuntu-console: true
EOF

sudo ros install --no-reboot -f -t generic -c cloud-config.yml -d /dev/sda
sudo reboot